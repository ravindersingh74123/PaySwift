{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "sourceMap": true,
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@db": ["../db/index.ts"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}